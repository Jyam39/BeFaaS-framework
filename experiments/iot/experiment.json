{
  "services": {
  "redisKube": {},
	"workload": {
      "config": "./workload.yml"
    }
  },
  "program": {
    "functions": {
      "trafficsensorfilter": {
        "provider": "openfaas",
		"call": "async",
        "calls": ["movementplan"]
      },
      "weathersensorfilter": {
        "provider": "openfaas",
		"call": "async",
        "calls": ["roadcondition"]
      },
      "roadcondition": {
        "provider": "openfaas",
		"call": "async",
        "calls": ["setlightphasecalculation"]
      },
      "emergencydetection": {
        "provider": "openfaas",
        "calls": ["setlightphasecalculation"]
      },
      "trafficstatistics": {
        "provider": "openfaas"
      },
      "setlightphasecalculation": {
        "provider": "openfaas"
      },
      "getlightphasecalculation": {
        "provider": "openfaas"
      },
      "objectrecognition": {
        "provider": "openfaas",
        "calls": ["trafficstatistics", "movementplan", "emergencydetection"]
      },
      "movementplan": {
        "provider": "openfaas",
		"call": "async",
        "calls": ["setlightphasecalculation"]
      }
    }
  }
}
